<android.support.v4.widget.SwipeRefreshLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluefletch.internal.feed.FeedActivity"
    tools:ignore="MergeRootFrame" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <TextView
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:background="@android:color/darker_gray"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/reply_to_post_text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/add_post_text_input"
            android:padding="16dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:visibility="visible"
            style="@android:style/TextAppearance.Widget.EditText"
            android:hint="@string/add_post_message"
            android:focusable="true"
            android:editable="true"
            android:enabled="true"/>

        <IconButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_post_button"
            android:enabled="true"
            android:background="@android:color/transparent"
            android:textColor="@drawable/custom_button"
            android:text="{fa-send}"/>
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:divider="@android:color/holo_blue_bright"
        android:dividerHeight="1px"
        android:id="@+id/list" />

</LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>